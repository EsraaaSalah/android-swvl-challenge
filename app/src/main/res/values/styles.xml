<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RegularAlignLeftBlack100Body1Style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>
        <item name="android:alpha">1</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="BoldAlignLeftBlack38Caption1Style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">11sp</item>
        <item name="android:alpha">0.38</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LightAlignLeftBlack100Body1Style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>
        <item name="android:alpha">1</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="RegularAlignCenterWhite100Body2Style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:alpha">1</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
